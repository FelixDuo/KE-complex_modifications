{
  "title": "Get Specific Language",
  "rules": [
    {
      "description": "Get Specific Language",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option",
                "left_command",
                "left_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option",
                "left_command",
                "left_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "zh-Hant"
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
