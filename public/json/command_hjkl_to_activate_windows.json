{
    "title": "Command + hjkl to activate windows",
    "maintainers": [
        "duleorlovic"
    ],
    "rules": [
                    {
                        "description": "Left command + hjkl as keyboard shortcuts to activate_window.scpt",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": { "key_code": "m", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt m" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "comma", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt comma" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "period", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt dot" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "slash", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt slash" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "h", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt h" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "j", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt j" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "l", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt l" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "k", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt k" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "semicolon", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt colon" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "quote", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt quote" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "u", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt u" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "i", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt i" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "o", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt o" }]
                            },
                            {
                                "type": "basic",
                                "from": { "key_code": "p", "modifiers": { "mandatory": ["left_command"], "optional": ["any"] } },
                                "to": [{ "shell_command": "osascript ~/trk.tools/sh/keyboard-shortcuts-to-switch-windows-on-macos/activate_window.scpt p" }]
                            }
                        ]
                    },
                    {
                        "description": "Ctrl+l in browser to left_command+l (since we map left_command+l to switch window)",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^org\\.mozilla\\.firefox$",
                                            "^com\\.google\\.Chrome$",
                                            "^com\\.brave\\.Browser$",
                                            "^com\\.apple\\.Safari$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "l",
                                    "modifiers": {
                                        "mandatory": ["fn"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [
                                    {
                                        "key_code": "l",
                                        "modifiers": ["left_command"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
    ]
}
