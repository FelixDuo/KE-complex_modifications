            }
          },
          "to": [
            {
              "consumer_key_code": "volume_decrement",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_unless",
              "name": "system.use_fkeys_as_standard_function_keys",
